<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">


    <TextView
        android:id="@+id/question_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:minHeight="100dp"
        android:text="@string/prompt_placeholder"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foregroundGravity="bottom"
        android:minHeight="200dp"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:foregroundGravity="bottom"
            android:text="@string/answer_placeholder" />

        <RadioButton
            android:id="@+id/answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:foregroundGravity="bottom"
            android:text="@string/answer_placeholder" />

        <RadioButton
            android:id="@+id/answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:foregroundGravity="bottom"
            android:text="@string/answer_placeholder" />

        <RadioButton
            android:id="@+id/answer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:foregroundGravity="bottom"
            android:text="@string/answer_placeholder" />
    </RadioGroup>

    <TableLayout
        android:id="@+id/imageTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="165dp"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                android:background="@color/champlain_green"
                android:padding="7dp"
                android:scaleType="fitXY"
                android:src="@color/black" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="165dp"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                android:background="@color/champlain_green"
                android:padding="7dp"
                android:scaleType="fitXY"
                android:src="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="165dp"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                android:background="@color/champlain_green"
                android:padding="7dp"
                android:scaleType="fitXY"
                android:src="@color/black" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="165dp"
                android:layout_height="160dp"
                android:layout_margin="8dp"
                android:background="@color/champlain_green"
                android:padding="7dp"
                android:scaleType="fitXY"
                android:src="@drawable/burlington_city_hall" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/hint"
            android:layout_width="191dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:foregroundGravity="bottom"
            android:text="@string/hint"
            app:backgroundTint="@color/champlain_blue" />

        <Button
            android:id="@+id/submit"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:foregroundGravity="bottom"
            android:text="@string/submit"
            app:backgroundTint="@color/champlain_green"
            app:icon="@drawable/chevron_right"
            app:iconGravity="textEnd"
            app:iconSize="20dp" />
    </LinearLayout>

</LinearLayout>